#include <iostream>
#include <cmath>
using namespace std;

int main() 
{
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);
	
	int x,y,w,h,ans1,ans2,tans;
	cin >> x >> y >>w >>h;
	ans1 = (abs(w-x)>abs(x)?x:abs(w-x));
	ans2 = (abs(h-y)>abs(y)?y:abs(h-y));
	tans = (ans1>ans2?ans2:ans1);
	cout << tans;
	return 0;
}
