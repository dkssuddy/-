#include <iostream>

using namespace std;


int main() {
	cin.tie(NULL);
	ios::sync_with_stdio(false);
	
	int N;
	cin >> N;
	for(int i=0; i<N;i++)
	{
		for(int space=N-i-1; space>0;space--)
			cout <<' ';
		for (int star=0; star<i+1; star++)
			cout <<'*';
		cout << endl;
	}
	for(int i=0; i<N; i++)
	{
		for(int star=0; star<i+1; star++)
			cout <<' ';
		for(int space=N-i-1; space>0;space--)
			cout <<'*';
		cout << endl;
	}
}
