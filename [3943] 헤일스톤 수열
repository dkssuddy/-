#include <iostream>
using namespace std;

int main()
{
	int T,n,maxu=0;
	cin.tie(0);
	cout.tie(0);
	ios_base::sync_with_stdio(false);
	
	cin >> T;
	for(int i=0; i<T; i++)
	{
		maxu=0;
		cin >> n;
	for(;;)	{
		if(n > maxu)
			maxu=n;
	if( n== 1)
		 break;
	if(n%2==0)
		n=n/2;
	else
		n=3*n+1;
	}
		cout <<maxu<<'\n';
	}
}
