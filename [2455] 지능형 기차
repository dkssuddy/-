#include <iostream>
using namespace std;

int main() {
	cin.tie(NULL);
	ios::sync_with_stdio(false);
  
	int A,B;
	int Human=0, max=0;
	for(int i=0; i<4; i++)
	{
		cin >> A;
		Human= Human-A;
		if(Human>max){
			max=Human;
		}
		cin >> B;
		Human=Human+B;
		if(Human>max)
			max=Human;
	}
	cout << max;
}
